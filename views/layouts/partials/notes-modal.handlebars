<div id="modal1{{this._id}}" class="modal">
    <div class="modal-content">
        <h4 id="modaltitle">{{this.title}}</h4>
       
        {{#if this.notes}}
        {{#each this.notes}}
      {{!-- <h4>Notes for <a href = {{link}}>{{title}}</a></h4> --}}
      <h6>{{this.note}}</h6>
    
       <button data-target="modal1" class="btn-small notedelete modal-trigger #40c4ff light-blue accent-2" data-note-id={{this._id}} data-article-id={{this.article}}>Delete Note</button>
     <hr>
    {{/each}}
    {{else}}
    <h6>No notes are available yet</h6>
    {{/if}}
   <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <textarea id="noteText{{this._id}}" class="materialize-textarea"></textarea>
          <label for="textarea1" id="noteText2{{this._id}}" class="#40c4ff light-blue accent-2">Enter a Note</label>
        </div>
         <button data-target="modal1" data-id={{this._id}} class="btn savenote modal-trigger #40c4ff light-blue accent-2">Save Note</button>
      </div>
    </form>
  </div>
    
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat #40c4ff light-blue accent-2">Close</a>
    </div>
  </div>







